    </div>
  </div>
</section>
<section id="loading" class="flex-shrink-0 d-none">
  <div
    class="d-flex align-items-center vh-100 position-relative overflow-hidden text-center"
  >
    <div class="mx-auto my-5">
      <h1 class="display-4 fw-normal"><span class="greeting"></span> <img class="profile-image rounded-circle"></h1>
      <p id="wait-message" class="mt-5">
        Please wait, your data is loading.
      </p>
      <p id="loading-status" class="text-muted"></p>      
      <p class="placeholder-wave">
        <span class="placeholder col-12"></span>
      </p>
    </div>
  </div>
</section>
