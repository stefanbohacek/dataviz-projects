<div id="map-wrapper" class="fixed-top min-vh-100">
  <div id="map"></div>
  {{! <canvas id="chart" aria-label="Dataset name" role="img"></canvas>
  <p id="description" class="mb-1 pt-4 fs-6"><span class="d-inline d-md-none">Continue scrolling to explore the data.</span></p> }}
</div>

<div class="container mb-5">
  <div id="row-intro" class="row p-4 mb-5">
    <div class="col-sm-12">
      <p class="lead mb-0">
        World instruments
      </p>
      <h1 class="mt-1 mb-4">
        Part 1: Asia
      </h1>
      <p>Exploring the Asian continent's rich history and culture through music and musical instruments.</p>
    </div>
  </div>
  <div class="row">
    <div id="instruments" class="col-sm-12">
      <style>code{color:black !important}</style>
      {{#each data_asia}}
        <div
          class="step min-vh-100 p-4"
          id="step-{{@index}}"
          data-step="{{@index}}"
          data-lat="{{this.lat}}"
          data-lng="{{this.lng}}"
        >
          <div class="card">
            <div class="card-body">
              <div class="container">
                <div class="row">
                  <div class="col-sm-12 col-md-6">
                    <h5 class="card-title h3 mb-3">{{this.name}}</h5>
                    <div class="card-text">
                      {{{this.description}}}
                      <p><a href="{{this.wikipedia}}">Learn more</a></p>
                    </div>
                  </div>
                  <div class="col-sm-12 col-md-6">
                    <div class="ratio ratio-16x9 mt-4">
                      <iframe
                        width="560"
                        height="315"
                        src="https://www.youtube.com/embed/{{this.video}}"
                        frameborder="0"
                        allowfullscreen
                      ></iframe>
                    </div>
                  </div>
                </div>
              </div>
              <div class="text-end mt-4">
                {{#if @last}}
                  <a href="#step-0" class="step-next btn btn-light">Start over</a>
                {{else}}
                  <a
                    href="#step-{{math @index '+' 1}}"
                    class="step-next btn btn-light"
                  >Next</a>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
      {{/each}}
        <div
          class="p-4"
        >
          <div class="card">
            <div class="card-body">
              <div class="container">
                <div class="row">
                  <div class="col-sm-12 col-md-12">
                    <h5 class="card-title h3 mb-3">Sources</h5>
                    <div class="card-text">
                      <ul>
                        <li>
                          <a href="https://hub.yamaha.com/brand/b-history/musical-instruments-across-asia-and-the-pacific-islands/">Musical Instruments Across Asia and the Pacific Islands</a> (yamaha.com)
                        </li>
                        <li>
                          <a href="https://en.wikipedia.org/">Wikipedia</a> (wikipedia.org)
                        </li>
                        <li>
                          <a href="https://www.youtube.com/">YouTube</a> (youtube.com)
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

    </div>
  </div>
</div>
<script src="/libs/scrollama/3.1.1/scrollama.min.js"></script>
<script src="/libs/mapbox-gl-js/v2.13.0/mapbox-gl.js"></script>