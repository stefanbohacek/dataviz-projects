                rel="noopener"
                title="Save to Pinboard"
              ><img
                  width="60px"
                  height="60px"
                  loading="lazy"
                  alt="Save to Pinboard"
                  src="/images/social-media/pinboard.svg"
                /></a>
            </li>
            <li>
              <a
                href="mailto:?subject={{title}}&body={{description}}%20{{projectURLencoded}}"
                target="_blank"
                rel="noopener"
                title="Email this page"
              ><img
                  width="60px"
                  height="60px"
                  loading="lazy"
                  alt="Send email"
                  src="/images/social-media/email.svg"
                /></a>
            </li>
          </ul>
        {{/if}}
        <p>
          <a href="https://stefanbohacek.online/@stefan">@stefan</a>
          {{#if project}}
