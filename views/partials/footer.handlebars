<footer class="footer mt-auto py-3 bg-light">
  <div class="container pt-5 pb-3">
    <div class="row align-items-center">
      <div class="col-sm-12 mx-auto pt-0 pb-5 mb-5 text-center border-bottom">
        {{#if project}}
          <ul class="share-buttons" data-source="simplesharingbuttons.com">
            <li>
              <a
                href="https://getpocket.com/save?url={{projectURLencoded}}&title={{title}}"
                target="_blank"
                rel="noopener"
                title="Add to Pocket"
              ><img
                  width="60px"
                  height="60px"
                  loading="lazy"
                  alt="Add to Pocket"
                  src="/images/social-media/pocket.svg"
                /></a>
            </li>
            <li>
              <a
                href="https://pinboard.in/popup_login/?url={{projectURLencoded}}&title={{title}}&description={{description}}"
